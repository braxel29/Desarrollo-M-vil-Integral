<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirebaseApp.Views.AddProductPage"
             Title="AddProductPage">

    <StackLayout Padding="20">

        <Label Text="Agregar Producto" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="NombreEntry" Placeholder="Nombre del Producto"/>
        <Entry x:Name="DescripcionEntry" Placeholder="Descripcion del Producto"/>
        <Entry x:Name="PrecioEntry" Placeholder="Precio del Producto" Keyboard="Numeric"/>

        <Button Text="Agregar" Clicked="OnAddProductClicked"/>

    </StackLayout>
    
</ContentPage>